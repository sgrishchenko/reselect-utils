{
  "private": true,
  "repository": "git+https://github.com/sgrishchenko/reselect-utils.git",
  "author": "Sergei Grishchenko",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "format": "prettier --write **/*.{js,ts,tsx,json,md}",
    "compile": "tsc --noEmit",
    "clean": "rimraf docz storybook typedoc",
    "site": "yarn clean && yarn docz:build && storybook:build && typedoc:light && typedoc:dark",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "storybook:dev": "start-storybook",
    "storybook:build": "build-storybook --output-dir storybook",
    "typedoc:light": "typedoc --out typedoc/light --theme typedoc-theme/light packages/reselect-utils",
    "typedoc:dark": "typedoc --out typedoc/dark --theme typedoc-theme/dark packages/reselect-utils",
    "distribute": "yarn workspace reselect-utils version && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn compile && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "yarn lint --cache --fix",
      "yarn test --bail --findRelatedTests"
    ],
    "**/*.{json,md}": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@rollup/plugin-typescript": "^4.0.0",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-storysource": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.1.3",
    "@types/theme-ui": "^0.3.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.9",
    "docz": "^2.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-feather": "^2.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.0",
    "theme-ui": "^0.2.52",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typedoc": "^0.16.11",
    "typescript": "^3.7.5"
  }
}
